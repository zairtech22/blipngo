<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= biz.name %> â€” Manage Poster</title>

  <style>
    :root{ --ink:#0A0A0A; --muted:#6b7280; --bg:#fafafa; --paper:#fff; --brand:<%= biz.brandColor || '#FFD21E' %>; --border:#e5e7eb; }
    *{box-sizing:border-box}
    body{ margin:0; font-family:system-ui,-apple-system,Segoe UI,Roboto,Inter,Arial,sans-serif; background:#f6f7f8; color:#111; }
    header{ display:flex; align-items:center; justify-content:space-between; gap:12px; padding:16px 20px; background:#fff; border-bottom:1px solid var(--border); }
    .h-left h1{margin:0; font-size:18px} .slug{color:var(--muted); font-weight:600}
    .actions{display:flex; gap:8px; flex-wrap:wrap}
    .btn{ border:2px solid #000; background:#fff; color:#000; padding:8px 12px; border-radius:10px; font-weight:700; text-decoration:none; }
    .btn:hover{background:#000; color:#fff}
    .btn.secondary{border-color:#888; color:#222}
    .btn.danger{border-color:#b00; color:#b00}.btn.danger:hover{background:#b00; color:#fff}

    main{ display:grid; grid-template-columns: 520px 1fr; gap:20px; padding:18px; max-width:1400px; margin:0 auto; }
    @media (max-width:1100px){ main{ grid-template-columns: 1fr; } }

    .card{ background:#fff; border:1px solid var(--border); border-radius:14px; padding:16px 16px 6px; margin-bottom:14px; }
    .card h3{margin:0 0 10px 0; font-size:16px}
    .hint{color:var(--muted); font-size:12px; margin:6px 0 0}
    label{display:block; font-weight:700; margin:10px 0 6px}
    input[type="text"], input[type="url"], input[type="color"], textarea, select{
      width:100%; padding:10px 12px; border:1px solid #cbd5e1; border-radius:10px; background:#fff; font:inherit;
    }
    textarea{resize:vertical; min-height:120px}
    .row{display:grid; grid-template-columns: 1fr 1fr; gap:12px}
    .preview{ background:#fff; border:1px solid var(--border); border-radius:14px; overflow:hidden; display:grid; grid-template-rows:auto 1fr; }
    iframe{width:100%; height:calc(100vh - 170px); border:0; background:#f1f5f9}
    .preview-head{display:flex; gap:8px; align-items:center; justify-content:space-between; padding:10px 12px; border-bottom:1px solid var(--border)}
    .preview-controls .chip{padding:6px 10px; border:1px solid #000; border-radius:999px; font-weight:700; cursor:pointer}
    .chip.active{background:#000; color:#fff}
  </style>
</head>
<body>

<header>
  <div class="h-left">
    <h1><strong><%= biz.name %></strong> <span class="slug">/ <%= biz.slug %></span></h1>
    <div class="hint">Edit below to customize the poster.</div>
  </div>
  <div class="actions">
    <a class="btn" href="/p/<%= biz.slug %>" target="_blank">Public</a>
    <a class="btn" href="/ai-poster/<%= biz.slug %>/google" target="_blank">AI Poster</a>
    <a class="btn" href="/admin/ai/<%= biz.slug %>">AI Settings</a>
    <a class="btn secondary" href="/">All</a>
    <form method="post" action="/business/<%= biz.slug %>/delete" onsubmit="return confirm('Are you sure you want to delete this business?')">
      <button class="btn danger" type="submit">Delete</button>
    </form>
  </div>
</header>

<main>
  <section>
    <form id="themeForm" method="post" action="/business/<%= biz.slug %>/theme">

      <!-- 1) BRAND -->
      <div class="card">
        <h3>1) Brand Settings</h3>
        <label>Business Name</label>
        <input name="name" type="text" value="<%= biz.name %>" />

        <label>Tagline</label>
        <input name="publicSubtitle" type="text" value="<%= biz.publicSubtitle || '' %>" placeholder="From the streets of NYC"/>

        <label>Logo URL</label>
        <input name="logoUrl" type="url" value="<%= biz.logoUrl || '' %>"/>

        <label>Logo Background Color</label>
        <input name="logoBgColor" type="color" value="<%= biz.logoBgColor || '#FFD21E' %>"/>

        <label>Poster Background Color</label>
        <input name="brandColor" type="color" value="<%= biz.brandColor || '#FFD21E' %>"/>
      </div>

      <!-- 2) CTA -->
      <div class="card">
        <h3>2) CTA</h3>
        <label>CTA Text</label>
        <input name="ctaText" type="text" value="<%= biz.ctaText || '' %>"/>

        <label>CTA Text Color</label>
        <input name="ctaColor" type="color" value="<%= biz.ctaColor || '#EDC400' %>"/>

        <label>CTA Background Color</label>
        <input name="ctaBgColor" type="color" value="<%= biz.ctaBgColor || '#0A0A0A' %>"/>
      </div>

      <!-- 3) SOCIAL LINKS -->
      <div class="card">
        <h3>3) Social Platforms</h3>

        <label>Instagram URL</label>
        <input name="instagramUrl" type="url" value="<%= biz.instagramUrl || '' %>"/>

        <label>TikTok URL</label>
        <input name="tiktokUrl" type="url" value="<%= biz.tiktokUrl || '' %>"/>

        <label>YouTube Shorts URL</label>
        <input name="youtubeUrl" type="url" value="<%= biz.youtubeUrl || '' %>"/>

      </div>

      <!-- SAVE -->
      <div class="card">
        <button class="btn" type="submit">Save Changes</button>
      </div>

    </form>
  </section>

  <aside class="preview">
    <div class="preview-head">
      <strong>Live Preview</strong>
    </div>
    <iframe id="posterFrame" src="/p/<%= biz.slug %>?ts=<%= Date.now() %>"></iframe>
  </aside>
</main>

<script>
  const form = document.getElementById('themeForm');
  const frame = document.getElementById('posterFrame');

  form.addEventListener('submit', () => {
    setTimeout(() => {
      frame.src = '/p/<%= biz.slug %>?ts=' + Date.now();
    }, 400);
  });
</script>

</body>
</html>
